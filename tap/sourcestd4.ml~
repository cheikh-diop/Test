let rec sum l = match l with
  | []    -> 0
  | x::xs -> x + (sum xs);;

let rec length l = match l with 
  | []    -> 0
  | _::xs -> 1 + (length xs);;

let maximum l = 
  let rec max_rec l m = match l with 
    | []    -> m
    | x::xs -> max_rec xs (max m x)
  in max_rec l (List.hd l);;
